@model OrangeBricks.Web.Controllers.Bookings.ViewModels.BookingViewModel

@{
    ViewBag.Title = "Book Viewing";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Book Viewing</h2>

<p>When would you like to view the @Model.Property.PropertyType on @Model.Property.StreetName?</p>

@using (Html.BeginForm("BookViewing", "Property", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <div class="form-group">
        @Html.LabelFor( m => m.ViewingAt, "View Date", new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.HiddenFor(m => m.Property.Id)
            
            @*@Html.TextBoxFor(m => m.ViewingAt, String.Format("{0:yyyy-MM-dd HH:mm:ss}", Model.ViewingAt), new { @class = "datefield", type = "date" })*@
            @Html.TextBoxFor(m => m.ViewingAt, String.Format("{0:s}", Model.ViewingAt), new { @class = "dateTimePicker", type = "datetime-local" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Book" />
        </div>
    </div>
}
